<Window x:Class="kp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kp"
        mc:Ignorable="d"
        Title="Login" Height="371.334" Width="376" Background="Aqua">
    <Border Background="#1A1110" CornerRadius="20" Margin="20,20,20.333,14">
        <StackPanel Margin="10,20,10.333,10">
            <Label Content="Авторизация" Foreground="White" FontSize="28" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Логин" Foreground="White"/>
            <TextBox Name="UsernameTextBox" Background="Gray" Foreground="white" FontSize="18"/>
            <Label Content="Пароль" Foreground="White"/>
            <PasswordBox Name="PasswordTextBox" Background="Gray" Foreground="white" FontSize="18"/>
            <Button Name="LoginButton" Content="Войти" Margin="60 15" Background="Gray" Foreground="white" FontSize="18" Click="LoginButton_Click"/>
            <Button x:Name="AdminButton" Content="Войти от администратора" Margin="37,0,34.333,0" Width="Auto" Click="Button_Click" Background="Red" Foreground="White" FontSize="18" Height="32"/>
        </StackPanel>
    </Border>
</Window>
